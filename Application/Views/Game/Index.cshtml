@model IEnumerable<Models.Table>
@{
    ViewData["Title"] = "Index";
}

@section Styles{
    <link rel="stylesheet" href="~/css/listofrooms.css" />
}

<div class="container table-box">
    <div class="row w-100 table-creator">
        <div class="col-12 title spacing-b-30">
            <div class="col-12">
                <p>Utwórz stół</p>
            </div>
            <div class="col-12">
                @if (ViewData["Error"] != null)
                {
                   <p style="color:red; font-size: 0.8rem; margin-top: 0;">@ViewBag.Error</p>
                }
            </div>
            </div>
        <div class="col-12 spacing-b-30">
            <form asp-action="CreateNewTable">
                <div class="form-group spacing-b-30">
                    <input class="form-control" name="name" placeholder="Nazwa stołu" />
                </div>
                <div class="form-group spacing-b-30">
                    <input type="submit" value="Dodaj" class="btn Button" />
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div class="tiles">
        <div class="row w-100">
            <div class="col-12 spacing-b-30">
                <p>Dołącz do gry</p>
            </div>
        </div>

        @if (Model == null || Model.Count() == 0)
        {
            <p>Brak stołów do gry</p>
        }
        else
        {
            <div class="row w-100">

                @foreach (var table in Model)
                {<div class="col-12 col-sm-4 col-lg-3 spacing-b-30">
                     <div class="tile-box">
                         <a class="table-link" asp-action="Room" asp-controller="Game" asp-route-name="@table.Name">@table.Name</a>
                     </div>
                 </div>
                }
            </div>
        }
    </div>
</div>


